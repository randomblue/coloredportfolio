<section id="contact" style="background-color: #fff;" class="text-page">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="heading">Contact</h2>
        <div class="row">
          <div class="col-md-6">
            <form id="contact-form" method="post" action="/contact" class="contact-form">
              <div class="controls">
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label for="name">Your firstname *</label>
                      <input type="text" name="firstName" placeholder="Enter your firstname" required="required" class="form-control">
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label for="surname">Your lastname *</label>
                      <input type="text" name="lastName" placeholder="Enter your  lastname" required="required" class="form-control">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="surname">Your email *</label>
                  <input type="email" name="email" placeholder="Enter your  email" required="required" class="form-control">
                </div>
                <div class="form-group">
                  <label for="surname">Your message for me *</label>
                  <textarea rows="4" name="message" placeholder="Enter your message" required="required" class="form-control"></textarea>
                </div>
                <div class="text-center">
                  <input type="submit" name="name" value="Send message" class="btn btn-primary btn-block">
                </div>
              </div>
            </form>
            <% if (mailSent) { %>
              <p>Thanks for the mail,
                <%= firstName%>. I'll get back to you soon.</p>
              <% } %>
          </div>
          <div class="col-md-6">
            <p class="lead">Have any questions?</p>
            <p>Fill out the form to your left or send me an email at
              <a href="mailto:byronluk@gmail.com">byronluk@gmail.com</a> and I'll get back to you shortly.</p>
            <p class="social">
              <a href="https://linkedin.com/in/byron-luk" target="blank" data-toggle="tooltip" data-placement="left" title="LinkedIn" class="gplus">
                <i class="fa fa-linkedin"></i>
              </a>
              <a href="https://github.com/byronluk" target="blank" data-toggle="tooltip" data-placement="top" title="Github" class="twitter">
                <i class="fa fa-github"></i>
              </a>
              <a href="https://codepen.io/byronluk" target="blank" data-toggle="tooltip" data-placement="bottom" title="CodePen" class="email">
                <i class="fa fa-codepen"></i>
              </a>
              <a href="/img/Byron-Luk.pdf" target="blank" data-toggle="tooltip" data-placement="right" title="Resume" class="instagram">
                <i class="fa fa-file"></i>
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- facebook, twitter, gplus, instagram, email are different icon classes -->